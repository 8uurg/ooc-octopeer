{
  "manifest_version": 2,
  
  "name": "Octopeer-BitBucket",
  "description": "Monitors peer-review behaviour on pull requests on BitBucket for acquiring peer review behaviour",
  "version": "0.0.4",

  "browser_action": {
    "default_title": "Octopeer",
    "default_icon": "./favicon.png"
  },

  "options_ui": {
    "page": "./octopeer_interface.html"
  },

  "content_scripts": [
      {
        "matches": [
          "http://bitbucket.org/*",
          "https://bitbucket.org/*"
        ],
        "js": [
          "js/OctopeerConstants.js",
          "js/trackers/KeystrokeTracker.js",
          "js/trackers/MouseClickTracker.js",
          "js/trackers/MousePositionTracker.js",
          "js/trackers/ResizeTracker.js",
          "js/trackers/UserIdTracker.js",
          "js/Main.js"
        ]
      }
  ],

  "background": {
    "scripts": [
        "js/OctopeerConstants.js",
        "js/RARequestSender.js"
      ]
  },

  "permissions": [
    // Domain Permissions
    "https://bitbucket.org/*",
    "https://localhost:8000/api/*",
    "https://cdnjs.cloudflare.com/*",
    "https://code.jquery.com/*",
    "https://fonts.googleapis.com/*",

    // API Permissions
    "storage"
  ]
}
