{
  "manifest_version": 2,
  
  "name": "Octopeer-BitBucket",
  "description": "Monitors peer-review behaviour on pull requests on BitBucket for acquiring peer review behaviour",
  "version": "0.0.2",

  "browser_action": {
    "default_title": "Octopeer",
    "default_icon": "./favicon.png",
    "default_popup": "./popup.html"
  },

  "content_scripts": [
      {
        "matches": [
          "http://bitbucket.org/*",
          "https://bitbucket.org/*"
        ],
        "js": [
          "js/interfaces/OctopeerConstants.js",
          "js/KeystrokeTracker.js",
          "js/mouseClickTracker.js",
          "js/mousePositionTracker.js",
          "js/resizeTracker.js",
          "js/UserIdTracker.js",
          "js/main.js"
        ]
      }
  ],

  "background": {
    "scripts": ["js/RARequestSender.js"]
  },

  "permissions": [
    // Domain Permissions
    "https://bitbucket.org/*",
    "https://localhost:8000/api/*",

    // API Permissions
    "storage"
  ]
}
