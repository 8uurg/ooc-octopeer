{
	"manifest_version": 2,
	
	"name": "Octopeer-BitBucket",
	"default_locale": "en",
	"description": "Monitors peer-review behaviour on pull requests on BitBucket for acquiring peer review behaviour",
	"version": "0.0.1",

	"browser_action": {
		"default_title": "Octopeer"
	},

	"content_scripts": [

	],

	"background": {
		"scripts": ["js/eventPage.js"],
		"persistent": false
	},

	"permissions": [
		"notifications", 
		"http://bitbucket.org/*", 
		"https://bitbucket.org/*"
	]
}
