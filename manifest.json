{
	"manifest_version": 2,
	
	"name": "Octopeer-BitBucket",
	"description": "Monitors peer-review behaviour on pull requests on BitBucket for acquiring peer review behaviour",
	"version": "0.0.1",

	"browser_action": {
		"default_title": "Octopeer",
		"default_popup": "./popup.html"
	},

	"content_scripts": [
      {
        "matches": [
          "http://bitbucket.org/*",
          "https://bitbucket.org/*"
        ],
        "js": [
          "js/trackUserId.js"
        ]
      }
	],

	"background": {

	},

	"permissions": [
		// Domain Permissions
		"http://bitbucket.org/*", 
		"https://bitbucket.org/*",

		// Chrome API Permissions
		"notifications",
		"tabs",
		"webNavigation"
	]
}
